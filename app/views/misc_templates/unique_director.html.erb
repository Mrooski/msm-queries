<h1>Director #<%=params.fetch("id")%> details</h1>

<a href="/directors"> Go back </a>
<hr>

<dl>
  <dt>Name</dt>
  <dd><%= @single_director.name%></dd>
  <dt>Dob</dt>
  <dd><%= @single_director.dob%></dd>
  <dt>Bio</dt>
  <dt><%= @single_director.bio%></dt>
  <dt>Image</dt>
  <dd><img src=<%= @single_director.image%> style="width:250px;"></dd>
  <dt>Created at</dt>
  <dd><%= @single_director.created_at%></dd>
  <dt>Updated at</dt>
  <dd><%= @single_director.updated_at%></dd>
</dl>
<hr>


<h2>Filmography</h2>
<table border="1">
  <tbody>
    <tr>
      <th>ID</th>
      <th>Image</th>
      <th>Title</th>
      <th>Year</th>
      <th>Director</th>
      <TH></TH>
    </tr>
    <%for movie in @their_movies do%>
      <tr>
        <th><%= movie.id %></th>
        <th><img src=<%=movie.image%> style="width:250px"></th>
        <th><%= movie.title %></th>
        <th><%= movie.year %></th>
        <th><%= @director%></th>
        <th><a href="/movies/<%= movie.id.to_s %>">Show details</a></th>
      </tr>
    <%end%>
  </tbody>
</table>
