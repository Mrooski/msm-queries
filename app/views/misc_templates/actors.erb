<h1>List of all actors</h1>
<hr>
<table border="1">
  <tbody>
    <tr>
      <th>ID</th>
      <th>Image</th>
      <th>Name</th>
      <th>Dob</th>
      <th></th>
    </tr>
    <%for actor in @actors do%>
      <tr>
        <th><%= actor.id %></th>
        <th><img src=<%=actor.image%> style="width:250px"></th>
        <th><%= actor.name %></th>
        <th><%= actor.dob %></th>
        <th><a href="/actors/<%= actor.id.to_s %>">Show details</a></th>
      </tr>
    <%end%>
  </tbody>
</table>
