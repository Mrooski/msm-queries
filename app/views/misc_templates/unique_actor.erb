<h1>Actor #<%=params.fetch("id")%> details</h1>

<a href="/actors"> Go back </a>
<hr>

<dl>
  <dt>Name</dt>
  <dd><%= @actor.name%></dd>
  <dt>Dob</dt>
  <dd><%= @actor.dob%></dd>
  <dt>Bio</dt>
  <dd><%= @actor.bio%></dd>
  <dt>Image</dt>
  <dd><img src=<%= @actor.image%> style="width:250px;"></dd>
  <dt>Created at</dt>
  <dd><%= @actor.created_at%></dd>
  <dt>Updated at</dt>
  <dd><%= @actor.updated_at%></dd>
</dl>
<hr>


<h2>Filmography</h2>
<table border="1">
  <tbody>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Director</th>
      <th>Character name</th>
      <th></th>
    </tr>
    <%for character in @their_characters do%>
      <tr>
        <th><%= @movies.where({:id => character.movie_id}).at(0).title %></th>
        <th><%= @movies.where({:id => character.movie_id}).at(0).year %></th>
        <th><%= @directors.where({ :id => @movies.where({ :id => character.movie_id}).at(0).director_id }).at(0).name%></th>
        <!--<th><%#= @directors.where({ :id => @movies.where({ :id => character.movie_id}).at(0).director_id }).at(0).name%></th>-->
        <th><%= character.name %></th>
        <th><a href="/movies/<%= character.movie_id.to_s %>">Show details</a></th>
      </tr>
    <%end%>
  </tbody>
</table>
